{
  "build": {
    "beforeBuildCommand": "npm --prefix frontend run build",
    "beforeDevCommand": "npm --prefix frontend run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../frontend/dist"
  },
  "package": {
    "productName": "DBO",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "process": {
        "exit": true,
        "relaunch": true
      },
      "shell": {
        "all": true,
        "open": ".*",
        "sidecar": true,
        "scope": [
          {
            "name": "bin/dbo-bin",
            "sidecar": true
          },
          {
            "name": "dbo-bin",
            "sidecar": true
          }
        ]
      },
      "os": {
        "all": true
      },
      "window": {
        "startDragging": true,
        "setFocus": true,
        "close": true
      },
      "fs": {
        "scope": [
          "$HOME/**",
          "$APPDATA/*",
          "$APPDATA/actions/*"
        ],
        "all": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["bin/dbo-bin"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.dbostudio.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": "-"
      },
      "resources": [],
      "shortDescription": "Modern and easy to use SQL client",
      "targets": ["deb","nsis","dmg","updater","appimage"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
			"endpoints": ["https://github.com/dbo-studio/dbo/releases/latest/download/latest.json"],
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU2NzZEOTdDMkU4RTVFOTIKUldTU1hvNHVmTmwyNW9mbE9CK0liUlNKZmIxbnhhRlVIYm81QlZwUG9xUXA0MEZ0VW4vdjZiWW0K"
    },
    "windows": [
      {
        "height": 800,
        "resizable": true,
        "title": "DBO",
        "width": 1280,
        "center": true,
        "minWidth": 1280,
        "minHeight": 700,
        "x": 0,
        "y": 0
      }
    ]
  }
}
